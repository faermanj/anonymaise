{
  "name": "Anonymaise Dev Container",
  "image": "mcr.microsoft.com/devcontainers/docker-in-docker",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "jdkDistro": "graalce",
      "installMaven": "true"
    },
    "ghcr.io/devcontainers-extra/features/quarkus-sdkman:2": {}
  },
  "postCreateCommand": "source ./devcontainer/postCreateCommand.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "aws-scripting-guy.cform",
        "vscjava.vscode-java-pack",
        "redhat.java"
      ]
    }
  }
}
